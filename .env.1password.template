# MongoDB AI Hub - 1Password Secrets Template
# This template defines the secrets structure for 1Password CLI integration
# Use: op inject -i .env.1password.template -o .env

# MongoDB Connection
MONGODB_URI="op://Personal/mongodb-ai-hub/database/connection_string"

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Authentication Secrets
JWT_SECRET="op://Personal/mongodb-ai-hub/security/jwt_secret"
JWT_REFRESH_SECRET="op://Personal/mongodb-ai-hub/security/jwt_refresh_secret"

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future email verification)
EMAIL_SERVICE="op://Personal/mongodb-ai-hub/email/service"
EMAIL_USER="op://Personal/mongodb-ai-hub/email/user"
EMAIL_PASSWORD="op://Personal/mongodb-ai-hub/email/password"

# CORS Configuration
CORS_ORIGIN="op://Personal/mongodb-ai-hub/cors/allowed_origins"

# Redis Configuration (for future session management)
REDIS_URL="op://Personal/mongodb-ai-hub/redis/connection_string"

# Monitoring and Analytics
SENTRY_DSN="op://Personal/mongodb-ai-hub/monitoring/sentry_dsn"
ANALYTICS_KEY="op://Personal/mongodb-ai-hub/analytics/key"

# External API Keys
OPENAI_API_KEY="op://Personal/mongodb-ai-hub/apis/openai_key"
ANTHROPIC_API_KEY="op://Personal/mongodb-ai-hub/apis/anthropic_key"