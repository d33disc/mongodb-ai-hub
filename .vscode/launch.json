{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Launch AI Hub Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/server.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "restart": true,
            "runtimeArgs": ["--inspect"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "üêõ Debug AI Hub",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/server.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000",
                "DEBUG": "*"
            },
            "console": "integratedTerminal",
            "restart": true,
            "runtimeArgs": ["--inspect-brk"],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}